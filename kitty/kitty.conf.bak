# THEME
include ./themes/gruvbox-material-dark-hard.conf

term xterm-256color
editor nvim

# WINDOW
macos_option_as_alt yes
hide_window_decorations no
enable_audio_bell no

# FONTS
font_size 14.0

# BEGIN_KITTY_FONTS
font_family      family="Monaspace Neon Var" style="Regular" features="+kern" wght=500
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS

